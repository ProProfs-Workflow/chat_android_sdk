<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="24dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fld_name"
            android:textColor="@color/form_title"
            android:textSize="@dimen/form_title_size" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/required_icon"
            android:id="@+id/required_icon"
            android:visibility="gone"
            android:layout_marginLeft="2dp"
            android:textColor="@color/error_msg"
            android:layout_marginStart="2dp" />
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:background="@drawable/edit_text_border"
        android:layout_marginTop="6dp"
        android:padding="12dp"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:overScrollMode="always"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:lines="6"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:scrollHorizontally="false"
        tools:ignore="Autofill,LabelFor" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textSize="@dimen/form_error_msg_size"
        android:textColor="@color/error_msg"
        android:id="@+id/err_msg"
        android:layout_marginTop="4dp"
        />
</LinearLayout>